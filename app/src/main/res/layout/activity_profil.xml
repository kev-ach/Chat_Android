    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_avatar" />

    <LinearLayout
        android:id="@+id/layoutPseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textViewPseudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="9"
            android:background="@color/blanc"
            android:paddingLeft="10dp"
            android:text="Pseudo"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/imageButtonEditPseudo"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blanc"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutPseudo"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="9"
            android:background="@color/blanc"
            android:paddingLeft="10dp"
            android:text="Nom"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/imageButtonEditName"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blanc"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutName"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="9"
            android:background="@color/blanc"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/imageButtonEditEmail"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blanc"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutEmail"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textViewTelephone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="9"
            android:background="@color/blanc"
            android:paddingLeft="10dp"
            android:text="Téléphone"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/imageButtonEditTelephone"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blanc"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>


    <Button
        android:id="@+id/buttonChangeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/layoutTelephone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/rouge"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="Changer Image"
        android:textColor="@color/blanc" />


</RelativeLayout>